{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Configuration",
      "description": "Default build configuration",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "KPU_BUILD_TESTS": "ON",
        "KPU_BUILD_EXAMPLES": "ON",
        "KPU_BUILD_TOOLS": "ON",
        "KPU_BUILD_PYTHON_BINDINGS": "ON",
        "KPU_ENABLE_OPENMP": "ON"
      },
      "condition": {
        "type": "anyOf",
        "conditions": [
          {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Linux"
          },
          {
            "type": "equals", 
            "lhs": "${hostSystemName}",
            "rhs": "Darwin"
          },
          {
            "type": "equals",
            "lhs": "${hostSystemName}", 
            "rhs": "Windows"
          }
        ]
      }
    },
    {
      "name": "debug",
      "displayName": "Debug Configuration",
      "description": "Debug build with sanitizers and detailed logging",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "KPU_ENABLE_SANITIZERS": "ON",
        "KPU_ENABLE_PROFILING": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release Configuration", 
      "description": "Optimized release build",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
      }
    },
    {
      "name": "minimal",
      "displayName": "Minimal Configuration",
      "description": "Minimal build with only core components",
      "inherits": "default",
      "cacheVariables": {
        "KPU_BUILD_TESTS": "OFF",
        "KPU_BUILD_EXAMPLES": "OFF", 
        "KPU_BUILD_TOOLS": "OFF",
        "KPU_BUILD_PYTHON_BINDINGS": "OFF",
        "KPU_BUILD_BENCHMARKS": "OFF",
        "KPU_BUILD_DOCS": "OFF"
      }
    },
    {
      "name": "full",
      "displayName": "Full Configuration",
      "description": "Full build with all features enabled",
      "inherits": "release",
      "cacheVariables": {
        "KPU_BUILD_DOCS": "ON",
        "KPU_BUILD_BENCHMARKS": "ON",
        "KPU_ENABLE_CUDA": "ON",
        "KPU_ENABLE_OPENCL": "ON"
      }
    },
    {
      "name": "windows-msvc",
      "displayName": "Windows MSVC",
      "description": "Windows build using MSVC",
      "inherits": "default",
      "generator": "Visual Studio 17 2022",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_C_COMPILER": "cl"
      },
      "architecture": {
        "value": "x64",
        "strategy": "set"
      }
    },
    {
      "name": "windows-clang",
      "displayName": "Windows Clang",
      "description": "Windows build using Clang",
      "inherits": "default",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_C_COMPILER": "clang"
      }
    },
    {
      "name": "linux-gcc",
      "displayName": "Linux GCC",
      "description": "Linux build using GCC",
      "inherits": "default",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_C_COMPILER": "gcc"
      }
    },
    {
      "name": "linux-clang",
      "displayName": "Linux Clang", 
      "description": "Linux build using Clang",
      "inherits": "default",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_C_COMPILER": "clang"
      }
    },
    {
      "name": "macos",
      "displayName": "macOS Configuration",
      "description": "macOS build with Xcode tools",
      "inherits": "default",
      "generator": "Xcode",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "cacheVariables": {
        "CMAKE_OSX_DEPLOYMENT_TARGET": "11.0"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "displayName": "Debug Build",
      "configurePreset": "debug",
      "configuration": "Debug"
    },
    {
      "name": "release",
      "displayName": "Release Build", 
      "configurePreset": "release",
      "configuration": "Release"
    },
    {
      "name": "full",
      "displayName": "Full Build",
      "configurePreset": "full",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "displayName": "Default Tests",
      "configurePreset": "default",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    },
    {
      "name": "unit",
      "displayName": "Unit Tests",
      "inherits": "default",
      "filter": {
        "include": {
          "label": "unit"
        }
      }
    },
    {
      "name": "integration", 
      "displayName": "Integration Tests",
      "inherits": "default",
      "filter": {
        "include": {
          "label": "integration"
        }
      }
    },
    {
      "name": "performance",
      "displayName": "Performance Tests",
      "inherits": "default",
      "filter": {
        "include": {
          "label": "performance"
        }
      }
    }
  ],
  "packagePresets": [
    {
      "name": "default",
      "displayName": "Default Package",
      "configurePreset": "release",
      "generators": [
        "TGZ",
        "ZIP"
      ]
    },
    {
      "name": "windows",
      "displayName": "Windows Package",
      "configurePreset": "windows-msvc",
      "generators": [
        "NSIS",
        "ZIP"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux",
      "displayName": "Linux Package",
      "configurePreset": "linux-gcc",
      "generators": [
        "DEB", 
        "RPM",
        "TGZ"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "macos",
      "displayName": "macOS Package",
      "configurePreset": "macos",
      "generators": [
        "DragNDrop",
        "TGZ"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    }
  ]
}