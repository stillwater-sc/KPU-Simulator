{
  "system": {
    "name": "Minimal KPU System",
    "description": "Basic single-KPU system for testing and development"
  },

  "host": {
    "cpu": {
      "core_count": 4,
      "frequency_mhz": 2400,
      "cache_l1_kb": 32,
      "cache_l2_kb": 256,
      "cache_l3_kb": 8192
    },
    "memory": {
      "dram_controller": {
        "channel_count": 2,
        "data_width_bits": 64
      },
      "modules": [
        {
          "id": "host_mem_0",
          "type": "DDR4",
          "form_factor": "DIMM",
          "capacity_gb": 16,
          "frequency_mhz": 3200,
          "bandwidth_gbps": 25.6,
          "latency_ns": 80,
          "channels": 2
        }
      ]
    }
  },

